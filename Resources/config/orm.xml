<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rz_media.manager.media.class">Rz\MediaBundle\Entity\MediaManager</parameter>
        <parameter key="rz_media.manager.category.class">Sonata\NewsBundle\Entity\CategoryManager</parameter>
    </parameters>

    <services>
        <service id="rz_media.manager.media" class="%rz_media.manager.media.class%">
            <argument type="service" id="sonata.media.pool" />
            <argument type="service" id="sonata.media.entity_manager" />
            <argument>%sonata.media.media.class%</argument>
        </service>

        <service id="rz_media.manager.category" class="%rz_media.manager.category.class%">
            <argument type="service" id="sonata.media.entity_manager" />
            <argument>%rz_media.manager.category.class%</argument>
        </service>
    </services>

</container>
